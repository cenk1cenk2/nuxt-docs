{
  "name": "@cenk1cenk2/docs",
  "private": true,
  "root": true,
  "description": "nuxt.js content based documentation.",
  "repository": "https://github.com/cenk1cenk2/docs",
  "author": {
    "name": "Cenk Kilic",
    "email": "cenk@kilic.dev",
    "url": "https://srcs.kilic.dev"
  },
  "workspaces": {
    "packages": [
      "docs/*",
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "ls": "lerna la",
    "clean": "lerna clean -y && rimraf node_modules yarn.lock",
    "exec": "lerna exec --stream",
    "command": "lerna run --stream",
    "lint:check": "yarn command lint:check --concurrency 1",
    "docs:toc": "markdown-toc README.md --bullets='-' -i && yarn command --no-bail docs:toc",
    "dev:start:listr2": "cd docs/listr2 && yarn dev:start"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn command lint:staged --concurrency 1",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "dependencies": {
    "nuxt": "^2.15.8"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.16.11",
    "@cenk1cenk2/cz-cc": "^1.4.11",
    "@cenk1cenk2/eslint-config": "^1.0.11",
    "@nuxt/typescript-build": "^2.0.4",
    "@nuxt/typescript-runtime": "^2.0.1",
    "@nuxtjs/eslint-config": "^6.0.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.4.0",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.3",
    "eslint": "^8.7.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.4",
    "markdown-toc": "^1.2.0",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.30.0",
    "postcss-html": "^1.3.0",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rustywind": "^0.12.2",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
